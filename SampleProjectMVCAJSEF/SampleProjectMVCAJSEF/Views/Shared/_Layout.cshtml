<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sample Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @RenderSection("scripts", required: false)
</head>
<body ng-app="App" ng-cloak>
    <md-toolbar class="md-hue-2 mainNav">
        <div class="md-toolbar-tools">
            <a href="/Home">
                <img src="~/Content/logo.png" style="max-height:60px;" />
            </a>
            <div flex>

            </div>
            <div  >
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </md-toolbar>
    <md-content layout-align="center stretch">
        <div layout="row" layout-align="center stretch" style="margin-bottom:60px;">
            <div flex="90" class="m-t-65">

                @RenderBody()

            </div>
        </div>
    </md-content>
    <footer style="position:fixed;bottom:0;width:100%; border-top:1px solid #bbb; background-color:white;">
        <p>&copy; @DateTime.Now.Year</p>
    </footer>
</body>
</html>
